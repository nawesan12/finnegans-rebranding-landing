---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800&family=Caveat:wght@700&family=Poppins:wght@400;500;700&display=swap"
            rel="stylesheet"
        />

        <!-- Typekit (still included if you use it for other fonts) -->
        <link rel="stylesheet" href="https://use.typekit.net/rln1saj.css" />

        <style is:global>
            @font-face {
                font-family: "Bright Clones";
                src: url("/fonts/Bright Clones Regular.ttf") format("truetype");
                font-weight: 400;
                font-style: normal;
                font-display: swap;
            }

            .hand-font {
                font-family: "Bright Clones";
                font-weight: 500;
            }

            /* Replace scandia with Poppins */
            .poppins {
                font-family: "Poppins", sans-serif;
                font-weight: 400;
                font-style: normal;
            }

            .poppins-semibold {
                font-family: "Poppins", sans-serif;
                font-weight: 500;
                font-style: normal;
            }

            .poppins-bold {
                font-family: "Poppins", sans-serif;
                font-weight: 700;
                font-style: normal;
            }
        </style>
    </head>
    <body class="overflow-x-hidden poppins">
        <slot />
    </body>
</html>
