---
// Import the necessary icons from lucide-astro
import { Instagram, Linkedin } from "@lucide/astro";

// It's good practice to define the image path here.
// This image should be placed in your `public/` folder.
const bgImageUrl = "/hero.png";
---

<!--
  This section is designed to be a full-viewport hero.
  - It uses a background image that covers the entire area.
  - The layout is a flex column that distributes content vertically.
  - All typography and spacing are responsive.
  - Includes a fully animated hamburger menu for mobile.
-->
<section
    id="home"
    class="relative z-40 min-h-screen bg-[url('/hero-mobile.png')] md:bg-[url('/hero.png')] bg-cover bg-right lg:bg-center bg-no-repeat"
>
    <!-- This div acts as a container for all content, ensuring consistent padding and max-width -->
    <div
        class="mx-auto flex h-screen min-h-[700px] max-w-7xl flex-col justify-around lg:justify-evenly py-6 px-6 lg:px-0"
    >
        <!-- Header: Contains logo and menu controls -->
        <header class="w-full lg:relative lg:top-20">
            <div class="flex items-center justify-between text-white">
                <!-- Logo with responsive font size -->
                <a href="/" class="z-50 text-4xl font-semibold md:text-5xl">
                    <img
                        src="/finnegans-blanco.png"
                        class="aspect-auto h-8 lg:h-16"
                        alt=""
                    />
                </a>

                <!-- Desktop Navigation (Visible on md screens and up) -->
                <nav
                    class="hidden items-center space-x-6 md:flex lg:relative lg:-top-8"
                >
                    <a
                        href="#"
                        aria-label="LinkedIn"
                        class="text-white transition hover:text-white"
                    >
                        <img
                            src="/Linkedin.svg"
                            class="size-8 drop-shadow-xl"
                            alt=""
                        />
                    </a>
                    <a
                        href="#"
                        aria-label="Instagram"
                        class="text-white/80 transition hover:text-white"
                    >
                        <img
                            src="/Instagram.svg"
                            class="size-6 drop-shadow-xl"
                            alt=""
                        />
                    </a>
                </nav>

                <!-- Hamburger Menu Button (Visible on mobile) -->
                <button
                    id="menu-btn"
                    class="hamburger z-50 block md:hidden focus:outline-none"
                    type="button"
                    aria-label="Toggle Menu"
                >
                    <span class="hamburger-top"></span>
                    <span class="hamburger-middle"></span>
                    <span class="hamburger-bottom"></span>
                </button>
            </div>
        </header>

        <!-- Mobile Menu (Hidden by default) -->
        <div
            id="menu"
            class="fixed inset-0 z-40 hidden flex-col items-center justify-center space-y-12 bg-[#0A1E3C]/90 text-4xl text-white backdrop-blur-sm"
        >
            <a href="#soluciones" class="hover:text-violet-400">Soluciones</a>
            <a href="#academia" class="hover:text-violet-400">Academia</a>
            <a href="#impacto" class="hover:text-violet-400">Impacto</a>
            <div class="flex items-center gap-8 pt-8">
                <a
                    href="#"
                    aria-label="LinkedIn"
                    class="text-white/80 transition hover:text-white"
                >
                    <img src="/Linkedin.svg" class="size-8" alt="" />
                </a>
                <a
                    href="#"
                    aria-label="Instagram"
                    class="text-white/80 transition hover:text-white"
                >
                    <img src="/Instagram.svg" class="size-6" alt="" />
                </a>
            </div>
        </div>

        <!-- Main Heading -->
        <!-- Main Heading -->
        <div class="text-white mt-auto lg:mt-0 md:mt-0 mb-12 lg:mb-0">
            <h2
                class="text-4xl poppins-semibold lg:leading-none leading-normal md:text-7xl lg:text-[110px] whitespace-nowrap"
            >
                Te <br /> invitamos al futuro <br /> que
                <div class="inline-flex relative max-w-max">
                    <span
                        class="hand-font text-7xl md:text-8xl lg:text-[160px] relative leading-none top-2 lg:top-4 z-20 align-text-top"
                        style="line-height: 0.5; display: inline-block; vertical-align: baseline;"
                    >
                        imaginamos.
                    </span>

                    <img
                        src="/ui/linea-imaginamos.png"
                        alt=""
                        class="object-contain w-full absolute z-10 -bottom-2 lg:-bottom-4"
                    />
                </div>
            </h2>
        </div>

        <!-- Footer within the hero -->
        <div
            class="flex flex-col items-center justify-between lg:relative lg:bottom-6 gap-8 text-white md:flex-row"
        >
            <img
                src="/nos-reinventamos.png"
                class="h-10 aspect-auto object-contain"
                alt=""
            />
            <!-- <p class="text-center text-xl font-medium md:text-left md:text-2xl">
                Nos reinventamos, con el <span class="relative inline-block">
                    <span class="font-handwritten text-2xl">cielo</span>
                    <img
                        src="/hand-circle.svg"
                        alt="circle"
                        class="absolute top-[-15px] left-[-15px] w-[130px] h-[70px] -rotate-[5deg]"
                    />
                </span>
                como punto de partida.
            </p> -->

            <!-- Desktop Bottom Navigation -->
            <nav class="hidden items-center text-lg font-medium md:flex">
                <ul class="flex items-center gap-6 text-white">
                    <li>
                        <a
                            href="#soluciones"
                            class="transition hover:text-white">Soluciones</a
                        >
                    </li>
                    <li>
                        <a href="#academia" class="transition hover:text-white"
                            >Academia</a
                        >
                    </li>
                    <li>
                        <a href="#impacto" class="transition hover:text-white"
                            >Impacto</a
                        >
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>

<!-- Client-side script to control the hamburger menu -->
<script is:inline>
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");

    btn.addEventListener("click", () => {
        btn.classList.toggle("open");
        menu.classList.toggle("hidden");
        menu.classList.toggle("flex");
        document.body.classList.toggle("overflow-hidden"); // Prevents scrolling when menu is open
    });
</script>

<!-- Styles for the hamburger animation and fonts -->
<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Gochi+Hand&display=swap");

    .font-handwritten {
        font-family: "Gochi Hand", cursive;
    }

    /* Hamburger Menu Styles */
    .hamburger {
        cursor: pointer;
        width: 24px;
        height: 24px;
        transition: all 0.25s;
        position: relative;
    }

    .hamburger-top,
    .hamburger-middle,
    .hamburger-bottom {
        position: absolute;
        width: 24px;
        height: 3px;
        top: 0;
        left: 0;
        background: #fff;
        border-radius: 2px;
        transform: rotate(0);
        transition: all 0.5s;
    }

    .hamburger-middle {
        transform: translateY(7px);
    }

    .hamburger-bottom {
        transform: translateY(14px);
    }

    .open .hamburger-top {
        transform: rotate(45deg) translateY(6px) translateX(6px);
    }

    .open .hamburger-middle {
        display: none;
    }

    .open .hamburger-bottom {
        transform: rotate(-45deg) translateY(6px) translateX(-6px);
    }
</style>
