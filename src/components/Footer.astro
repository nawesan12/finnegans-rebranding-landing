---
// Import the icons needed for the footer
import { Linkedin, Instagram, ChevronUp } from "@lucide/astro";
---

<!--
  This footer is designed to be fully responsive.
  - On mobile, content stacks vertically for easy scrolling.
  - On medium screens and up (md:), it transitions to a horizontal layout.
  - Font sizes and spacing also adjust for different screen sizes.
-->
<footer class="bg-[#0A1E3C] py-12 md:py-16 text-white">
    <div class="mx-auto max-w-7xl px-6 lg:px-0">
        <!-- Top section with Call to Action -->
        <div class="border-b border-white/10 pb-12 md:pb-16">
            <div
                class="flex flex-col items-center justify-between gap-8 text-center md:flex-row md:text-left"
            >
                <!-- Heading with responsive font size -->
                <h3 class="text-3xl font-bold md:text-4xl">
                    Empecemos a crear juntos.
                </h3>
                <!-- Button with responsive font size and padding -->
                <a
                    href="#"
                    class="inline-block flex-shrink-0 rounded-full bg-white px-6 py-3 font-bold text-blue-900 transition-colors hover:bg-gray-200 md:px-8 text-xl md:text-2xl"
                    >Agend√° una demo</a
                >
            </div>
        </div>

        <!-- Bottom section with logo, navigation, and social links -->
        <div
            class="flex flex-col items-center justify-between gap-10 pt-12 md:flex-row md:gap-6"
        >
            <!-- Logo with responsive font size -->
            <h4 class="text-4xl font-bold text-white md:text-5xl">Finnegans</h4>

            <!-- Main navigation, hidden on mobile (md:flex) -->
            <div class="hidden items-center gap-6 text-white/70 md:flex">
                <a href="#soluciones" class="transition hover:text-white"
                    >Soluciones</a
                >
                <a href="#academia" class="transition hover:text-white"
                    >Academia</a
                >
                <a href="#impacto" class="transition hover:text-white"
                    >Impacto</a
                >
            </div>

            <!-- Social media icons -->
            <div class="flex items-center gap-6">
                <a
                    href="#"
                    aria-label="LinkedIn"
                    class="text-white/70 transition hover:text-white"
                    ><Linkedin size={24} /></a
                >
                <a
                    href="#"
                    aria-label="Instagram"
                    class="text-white/70 transition hover:text-white"
                    ><Instagram size={24} /></a
                >
            </div>

            <!-- "Back to top" button -->
            <a
                href="#home"
                class="flex items-center gap-2 rounded-full bg-white/10 p-2 px-4 text-sm text-white/70 transition hover:bg-white/20 hover:text-white"
            >
                <ChevronUp size={16} />
                <span>Volver arriba</span>
            </a>
        </div>
    </div>
</footer>
